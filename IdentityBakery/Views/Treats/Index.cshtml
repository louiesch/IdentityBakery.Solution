@{
  Layout = "_Layout";
}

@using IdentityBakery.Models;
@model List<IdentityBakery.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>You don't have any treats yet.</h3>
} 

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>