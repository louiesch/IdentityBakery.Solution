@{
  Layout = "_Layout";
}

@model IdentityBakery.Models.Flavor

<h3>Add a new flavor</h3>
@using (Html.BeginForm())
{
  @Html.Label("Enter flavor name: ")
  @Html.TextBoxFor(model => model.FlavorName)
  <input type="submit" value="Add flavor" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>